@page
@model Library.Pages.Copies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Copy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Copy.Id" />
            <div class="form-group">
                <label asp-for="Copy.Isbn" class="control-label">ISBN</label>
                <input asp-for="Copy.Isbn" class="form-control" />
                <span asp-validation-for="Copy.Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Copy.Libuser" class="control-label">User</label>
                <select asp-for="Copy.Libuser" class="form-control" asp-items="ViewBag.Libuser">
                    <option></option>
                </select>
                <span asp-validation-for="Copy.Libuser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Copy.Taken" class="control-label"></label>
                <input asp-for="Copy.Taken" class="form-control" />
                <span asp-validation-for="Copy.Taken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Copy.Return" class="control-label"></label>
                <input asp-for="Copy.Return" class="form-control" />
                <span asp-validation-for="Copy.Return" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
