@page
@model Library.Pages.Users.EditPasswordModel
@{
    ViewData["Title"] = "EditPassword";
}

<h2>Edit Password</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />
            <input type="hidden" asp-for="User.Role" />
            <div class="form-group">
                <label asp-for="User.Identitycode" class="control-label"></label>
                <input asp-for="User.Identitycode" class="form-control" readonly/>
                <span asp-validation-for="User.Identitycode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Name" class="control-label"></label>
                <input asp-for="User.Name" class="form-control" readonly/>
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label class="control-label">New Password</label>
                    <input asp-for="NewPassword" class="form-control" type="password" required/>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


