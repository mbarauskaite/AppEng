@page
@model Library.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Identitycode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
              <!--  @Html.DisplayNameFor(model => model.User[0].Password) -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Identitycode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Password)*@
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>*@
            @if (item.Role == 0)
            {
                <td>
                    User
                </td>
            }
            @if (item.Role == 1)
            {
                <td>
                    Admin
                </td>
            }
        <td>
            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-page="./EditPassword" asp-route-id="@item.Id">Edit Password</a> |
            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
        </td>
        </tr>
}
    </tbody>
</table>
